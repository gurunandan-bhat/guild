{{- $reviews := slice }}
{{- range .Pages }}
    {{- $pageMap := (jsonify . ) | transform.Unmarshal }}
    {{- $critic := "" }}
    {{- $media := "" }}
    {{- $source := "" }}
    {{- $subtitle := "" }}
    {{- $img := "" }}
    {{- with index .Params "critics" }}
        {{- with index . 0 }}
            {{- $critic = . }}
        {{- end }}
    {{- end }}
    {{- with index .Params "source" }}
        {{- $source = . }}
    {{- end }}
    {{- with index .Params "media" }}
        {{- $media = . }}
    {{- end }}
    {{- with index .Params "subtitle" }}
        {{- $subtitle = . }}
    {{- end }}
    {{- with index .Params "img" }}
        {{- $img = . }}
    {{- end }}
    {{- $pageMap = merge $pageMap (dict
        "ReviewPath" (urlize .Path)
        "Params" .Params
        "Critic" $critic
        "Media" $media
        "Source" $source
        "SubTitle" $subtitle
        "Summary" .Summary
        "Content" .RawContent
        "Image" $img)
    }}
    {{- $reviews = append $pageMap $reviews }}
{{- end }}
{{- $reviews | jsonify (dict "prefix" "" "indent" "\t") }}
